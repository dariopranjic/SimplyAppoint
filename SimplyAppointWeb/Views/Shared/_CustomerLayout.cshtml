<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimplyAppoint</title>

    <link rel="stylesheet" href="~/AdminKit/css/light.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link id="customer-theme-stylesheet" rel="stylesheet" href="~/css/customer-light.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>

<body class="customer-page">
    <div class="customer-shell">

        <nav class="navbar navbar-expand-lg customer-nav">
            <div class="container d-flex align-items-center justify-content-between">

                <a class="customer-brand" asp-controller="Home" asp-action="Index">
                    <span class="customer-brand-mark"></span>
                    <span>
                        <div class="customer-brand-text">SimplyAppoint</div>
                    </span>
                </a>

                <div class="d-flex align-items-center gap-3">

                    <button id="theme-toggle" class="btn customer-pill" style="font-weight:800;">
                        Theme
                    </button>

                    @if (!User.Identity?.IsAuthenticated ?? true)
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn customer-pill">
                            Log in
                        </a>

                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary customer-primary">
                            Register
                        </a>
                    }
                    else
                    {
                        <div class="dropdown">
                            <a class="btn customer-pill dropdown-toggle d-inline-flex align-items-center gap-2"
                               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="customer-avatar">
                                    @User.Identity!.Name!.Substring(0, 1).ToUpper()
                                </span>
                                <span class="d-none d-md-inline fw-bold">Customer</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" style="min-width: 260px;">
                                <li class="px-3 py-2">
                                    <div class="fw-bold">Customer</div>
                                    <div class="small text-truncate customer-dd-email">
                                        @User.Identity!.Name
                                    </div>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item d-flex align-items-center gap-2">
                                            <span data-feather="log-out"></span> Sign out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>

        <main class="customer-main">
            <div class="container customer-content">
                @RenderBody()
            </div>
        </main>

        <footer class="customer-footer">
            <div class="container py-3 d-flex flex-wrap justify-content-between gap-2">
                <div>© @DateTime.Now.Year SimplyAppoint</div>
                <div style="opacity:.85;">Privacy • Terms • Support</div>
            </div>
        </footer>

    </div>

    <script src="~/AdminKit/js/app.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Theme Switcher Logic
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById('theme-toggle');
            const themeLink = document.getElementById('customer-theme-stylesheet');

            const lightThemePath = '/css/customer-light.css';
            const darkThemePath = '/css/customer-dark.css';

            // Check localStorage
            const savedTheme = localStorage.getItem('sa-theme');

            if (savedTheme === 'dark') {
                themeLink.setAttribute('href', darkThemePath);
                toggleBtn.innerText = "Light";
            } else {
                themeLink.setAttribute('href', lightThemePath);
                toggleBtn.innerText = "Dark";
            }

            toggleBtn.addEventListener('click', function () {
                const currentHref = themeLink.getAttribute('href');
                if (currentHref.includes('customer-light.css')) {
                    themeLink.setAttribute('href', darkThemePath);
                    toggleBtn.innerText = "Light";
                    localStorage.setItem('sa-theme', 'dark');
                } else {
                    themeLink.setAttribute('href', lightThemePath);
                    toggleBtn.innerText = "Dark";
                    localStorage.setItem('sa-theme', 'light');
                }
            });

            if (window.feather) window.feather.replace();
        });
    </script>
</body>
</html>