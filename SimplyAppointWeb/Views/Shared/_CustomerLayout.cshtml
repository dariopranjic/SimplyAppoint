<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimplyAppoint</title>

    @* If you already load AdminKit/Bootstrap globally in _Layout, keep only what you need here.
       Otherwise, include your AdminKit css bundle below. *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    @* Optional: your site CSS *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --c-bg: #0b1220;
            --c-panel: rgba(255,255,255,.06);
            --c-panel2: rgba(255,255,255,.08);
            --c-border: rgba(255,255,255,.10);
            --c-muted: rgba(255,255,255,.65);
            --c-text: rgba(255,255,255,.92);
            --c-brand: #4f8cff;
            --c-brand2: #7c3aed;
            --c-shadow: 0 24px 70px rgba(0,0,0,.45);
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: radial-gradient(900px 500px at 20% 10%, rgba(79,140,255,.25), transparent 55%), radial-gradient(900px 500px at 80% 0%, rgba(124,58,237,.22), transparent 55%), var(--c-bg);
            color: var(--c-text);
        }

        a {
            color: inherit;
            text-decoration: none;
        }

            a:hover {
                text-decoration: none;
            }

        .c-shell {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* Topbar */
        .c-topbar {
            position: sticky;
            top: 0;
            z-index: 50;
            backdrop-filter: blur(14px);
            background: rgba(11,18,32,.60);
            border-bottom: 1px solid rgba(255,255,255,.06);
        }

        .c-topbar-inner {
            max-width: 1180px;
            margin: 0 auto;
            padding: 14px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .c-brand {
            display: flex;
            align-items: center;
            gap: 10px;
            min-width: 240px;
        }

        .c-logo {
            width: 40px;
            height: 40px;
            border-radius: 14px;
            background: radial-gradient(14px 14px at 30% 30%, rgba(255,255,255,.35), transparent 55%), linear-gradient(135deg, rgba(79,140,255,.95), rgba(124,58,237,.95));
            border: 1px solid rgba(255,255,255,.14);
            box-shadow: 0 16px 46px rgba(79,140,255,.18);
            flex: 0 0 auto;
        }

        .c-brand-title {
            font-weight: 900;
            letter-spacing: -0.02em;
            line-height: 1.1;
        }

        .c-brand-sub {
            font-size: .86rem;
            color: var(--c-muted);
            margin-top: 2px;
        }

        .c-actions {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .c-pill {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 12px;
            border-radius: 999px;
            border: 1px solid rgba(255,255,255,.10);
            background: rgba(255,255,255,.05);
            color: rgba(255,255,255,.88);
            font-weight: 800;
            font-size: .92rem;
            cursor: pointer;
            user-select: none;
            transition: transform .10s ease, background .12s ease, border-color .12s ease;
            white-space: nowrap;
        }

            .c-pill:hover {
                transform: translateY(-1px);
                background: rgba(255,255,255,.07);
                border-color: rgba(255,255,255,.16);
            }

            .c-pill.primary {
                background: linear-gradient(135deg, rgba(79,140,255,.95), rgba(124,58,237,.95));
                border-color: rgba(255,255,255,.18);
            }

        /* Profile dropdown (no JS, hover) */
        .c-profile {
            position: relative;
        }

        .c-profile-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 10px;
            border-radius: 999px;
            border: 1px solid rgba(255,255,255,.10);
            background: rgba(255,255,255,.05);
            cursor: pointer;
            user-select: none;
            transition: transform .10s ease, background .12s ease, border-color .12s ease;
        }

            .c-profile-btn:hover {
                transform: translateY(-1px);
                background: rgba(255,255,255,.07);
                border-color: rgba(255,255,255,.16);
            }

        .c-avatar {
            width: 34px;
            height: 34px;
            border-radius: 999px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 900;
            background: rgba(79,140,255,.20);
            border: 1px solid rgba(255,255,255,.12);
        }

        .c-profile-meta {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

        .c-profile-name {
            font-weight: 900;
            font-size: .92rem;
        }

        .c-profile-email {
            font-size: .82rem;
            color: rgba(255,255,255,.62);
            max-width: 220px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .c-menu {
            position: absolute;
            right: 0;
            top: calc(100% + 10px);
            width: 260px;
            border-radius: 18px;
            border: 1px solid rgba(255,255,255,.12);
            background: rgba(17, 25, 40, .92);
            backdrop-filter: blur(14px);
            box-shadow: var(--c-shadow);
            padding: 10px;
            display: none;
        }

        .c-profile:hover .c-menu {
            display: block;
        }

        .c-menu-header {
            padding: 10px 10px 8px 10px;
            border-bottom: 1px solid rgba(255,255,255,.08);
            margin-bottom: 8px;
        }

        .c-menu-title {
            font-weight: 900;
        }

        .c-menu-sub {
            color: rgba(255,255,255,.62);
            font-weight: 600;
            font-size: .9rem;
            margin-top: 4px;
        }

        .c-menu-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            border-radius: 14px;
            border: 1px solid transparent;
            color: rgba(255,255,255,.88);
            font-weight: 800;
        }

            .c-menu-item:hover {
                background: rgba(255,255,255,.06);
                border-color: rgba(255,255,255,.10);
            }

        .c-menu-sep {
            height: 1px;
            background: rgba(255,255,255,.08);
            margin: 8px 2px;
        }

        /* Main */
        main {
            flex: 1;
        }

        .c-container {
            max-width: 1180px;
            margin: 0 auto;
            padding: 18px;
        }

        /* Footer */
        .c-footer {
            border-top: 1px solid rgba(255,255,255,.06);
            background: rgba(11,18,32,.40);
        }

        .c-footer-inner {
            max-width: 1180px;
            margin: 0 auto;
            padding: 16px 18px;
            display: flex;
            justify-content: space-between;
            gap: 12px;
            color: rgba(255,255,255,.60);
            font-size: .9rem;
            flex-wrap: wrap;
        }

        @@media (max-width: 720px) {
            .c-brand-sub {
                display: none;
            }

            .c-profile-email {
                display: none;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="c-shell">
        <header class="c-topbar">
            <div class="c-topbar-inner">

                <a class="c-brand" asp-controller="Customer" asp-action="Index">
                    <div class="c-logo"></div>
                    <div>
                        <div class="c-brand-title">SimplyAppoint</div>
                        <div class="c-brand-sub">Bookings, reminders & profile</div>
                    </div>
                </a>

                <div class="c-actions">
                    <a class="c-pill" asp-controller="Customer" asp-action="Bookings">
                        My bookings
                    </a>
                    <a class="c-pill primary" asp-controller="Customer" asp-action="Discover">
                        Book new
                    </a>

                    <div class="c-profile">
                        <div class="c-profile-btn">
                            <div class="c-avatar">CU</div>
                            <div class="c-profile-meta">
                                <div class="c-profile-name">Customer</div>
                                <div class="c-profile-email">customer@email.com</div>
                            </div>
                            <span style="opacity:.7; font-weight:900;">▾</span>
                        </div>

                        <div class="c-menu">
                            <div class="c-menu-header">
                                <div class="c-menu-title">Customer</div>
                                <div class="c-menu-sub">customer@email.com</div>
                            </div>

                            <a class="c-menu-item" asp-controller="Customer" asp-action="Profile">
                                <span>👤</span> Profile
                            </a>
                            <a class="c-menu-item" asp-controller="Customer" asp-action="Bookings">
                                <span>📅</span> My bookings
                            </a>
                            <a class="c-menu-item" asp-controller="Customer" asp-action="Settings">
                                <span>⚙️</span> Settings
                            </a>

                            <div class="c-menu-sep"></div>

                            <a class="c-menu-item" asp-controller="Auth" asp-action="Logout">
                                <span>↩️</span> Sign out
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </header>

        <main role="main">
            <div class="c-container">
                @RenderBody()
            </div>
        </main>

        <footer class="c-footer">
            <div class="c-footer-inner">
                <div>© @DateTime.Now.Year SimplyAppoint</div>
                <div>Privacy • Terms • Support</div>
            </div>
        </footer>
    </div>

    @* If AdminKit/Bootstrap JS is already loaded globally, you can remove these. *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    @* Optional: feather icon replace if you use it on customer pages *@
    <script>
        if (window.feather) window.feather.replace();
    </script>
</body>
</html>
