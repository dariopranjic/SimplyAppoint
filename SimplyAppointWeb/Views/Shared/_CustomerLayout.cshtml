<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimplyAppoint</title>

    <link rel="stylesheet" href="~/AdminKit/css/light.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: #f6f7fb;
        }

        .customer-shell {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .customer-main {
            flex: 1;
        }

        .customer-nav {
            border-bottom: 1px solid rgba(0,0,0,.06);
        }

        .customer-brand-mark {
            width: 34px;
            height: 34px;
            border-radius: 12px;
            background: linear-gradient(135deg, #2f7dff, #7c3aed);
            display: inline-block;
            box-shadow: 0 10px 24px rgba(47,125,255,.18);
        }

        .customer-brand-text {
            color: #0f172a !important;
            opacity: 1 !important;
            font-weight: 800;
            letter-spacing: -0.02em;
        }

        .navbar-brand:hover .customer-brand-text {
            color: #0f172a !important;
            opacity: 1 !important;
        }

        .customer-navlinks .nav-link {
            font-weight: 700;
            color: rgba(15,23,42,.80) !important;
            border-radius: 999px;
            padding: .45rem .8rem;
            transition: background .12s ease, color .12s ease, transform .08s ease;
            margin-right: .25rem;
        }

            .customer-navlinks .nav-link:hover {
                background: rgba(15,23,42,.06);
                color: rgba(15,23,42,.95) !important;
                transform: translateY(-1px);
            }

            .customer-navlinks .nav-link.active {
                background: rgba(47,125,255,.12);
                color: #1d4ed8 !important;
            }

        .customer-avatar {
            width: 34px;
            height: 34px;
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            color: #0f172a;
            background: #e9eefc;
            border: 1px solid rgba(0,0,0,.06);
        }

        .customer-pill {
            border: 1px solid rgba(0,0,0,.08);
            background: #fff;
            border-radius: 999px;
            padding: .52rem .85rem;
            font-weight: 800;
            transition: background .12s ease, transform .08s ease, border-color .12s ease;
        }

            .customer-pill:hover {
                background: #f8fafc;
                transform: translateY(-1px);
                border-color: rgba(0,0,0,.12);
            }

        .customer-primary {
            border-radius: 999px;
            padding: .52rem .95rem;
            font-weight: 800;
            box-shadow: 0 10px 22px rgba(47,125,255,.20);
        }

            .customer-primary:hover {
                box-shadow: 0 14px 26px rgba(47,125,255,.26);
                transform: translateY(-1px);
            }

        /* Mobile: hide desktop navbar controls (no burger, no collapse) */
        @@media (max-width: 991.98px) {
            .customer-desktop-only {
                display: none !important;
            }
        }

        /* Desktop: hide mobile-only items */
        @@media (min-width: 992px) {
            .customer-mobile-only {
                display: none !important;
            }
        }

        /* Dropdown nice spacing for nav group on mobile */
        .customer-dd-section-title {
            font-size: .72rem;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: rgba(15,23,42,.50);
            font-weight: 800;
            margin: .25rem 0 .25rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="customer-shell">

        <nav class="navbar navbar-expand-lg navbar-light bg-white customer-nav">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Customer" asp-action="Index">
                    <span class="customer-brand-mark"></span>
                    <span class="customer-brand-text">SimplyAppoint</span>
                </a>

                <!-- DESKTOP NAV (no burger needed on mobile) -->
                <div class="customer-desktop-only d-flex align-items-center flex-grow-1">

                    <ul class="navbar-nav me-auto mb-0 customer-navlinks">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Discover">Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Bookings">My bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Support">Support</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2 ms-lg-auto">

                        <button type="button" class="btn customer-pill d-inline-flex align-items-center gap-2">
                            <span data-feather="sun"></span>
                            <span class="d-none d-sm-inline">Light</span>
                        </button>

                        <a asp-controller="Customer" asp-action="Discover"
                           class="btn btn-primary customer-primary d-inline-flex align-items-center gap-2">
                            <span data-feather="plus"></span>
                            <span>New booking</span>
                        </a>

                    </div>
                </div>

                <!-- Profile dropdown (ALWAYS visible; becomes the mobile nav) -->
                <div class="ms-auto d-flex align-items-center">
                    <div class="dropdown">
                        <a class="btn customer-pill dropdown-toggle d-inline-flex align-items-center gap-2"
                           href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="customer-avatar">CU</span>
                            <span class="d-none d-md-inline fw-bold">Customer</span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" style="min-width: 260px;">
                            <li class="px-3 py-2">
                                <div class="fw-bold">Customer</div>
                                <div class="text-muted small text-truncate">customer@email.com</div>
                            </li>

                            <!-- MOBILE NAV INSIDE DROPDOWN -->
                            <li class="customer-mobile-only"><hr class="dropdown-divider"></li>
                            <li class="customer-mobile-only px-3">
                                <div class="customer-dd-section-title">Navigation</div>
                            </li>
                            <li class="customer-mobile-only">
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Discover">
                                    <span data-feather="plus"></span> New booking
                                </a>
                            </li>
                            <li class="customer-mobile-only">
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Discover">
                                    <span data-feather="search"></span> Book
                                </a>
                            </li>
                            <li class="customer-mobile-only">
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Bookings">
                                    <span data-feather="calendar"></span> My bookings
                                </a>
                            </li>
                            <li class="customer-mobile-only">
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Support">
                                    <span data-feather="help-circle"></span> Support
                                </a>
                            </li>
                            <li class="customer-mobile-only">
                                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                                    <span data-feather="sun"></span> Light mode
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <!-- Existing profile items (UNCHANGED) -->
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Profile">
                                    <span data-feather="user"></span> Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Bookings">
                                    <span data-feather="calendar"></span> My bookings
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Customer" asp-action="Settings">
                                    <span data-feather="settings"></span> Settings
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   asp-controller="Auth" asp-action="Logout">
                                    <span data-feather="log-out"></span> Sign out
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>

        <main class="customer-main">
            <div class="container py-4">
                @RenderBody()
            </div>
        </main>

        <footer class="bg-white border-top" style="border-color: rgba(0,0,0,.06) !important;">
            <div class="container py-3 d-flex flex-wrap justify-content-between gap-2 text-muted small">
                <div>© @DateTime.Now.Year SimplyAppoint</div>
                <div>Privacy • Terms • Support</div>
            </div>
        </footer>

    </div>

    <script src="~/AdminKit/js/app.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <script>
        if (window.feather) window.feather.replace();
    </script>
</body>
</html>
