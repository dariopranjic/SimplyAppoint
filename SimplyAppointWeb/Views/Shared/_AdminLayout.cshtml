@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - SimplyAppoint</title>

    <link rel="shortcut icon" href="~/AdminKit/img/icons/icon-48x48.png" />
    <link rel="stylesheet" href="~/AdminKit/css/dark.css" asp-append-version="true" />

    <style>
        /* Flat, Professional Circular Avatar */
        .owner-avatar {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: #3b7ddd;
            color: #ffffff;
            font-weight: 600;
            font-size: 1.1rem;
            text-transform: uppercase;
        }

        /* Sidebar Alignment */
        .sidebar-user {
            padding: 1.5rem 1.5rem 1.5rem 0.75rem !important;
        }

        .sidebar-nav {
            padding-left: 0;
        }

        /* Top Navbar User Link */
        .navbar-user-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            padding: 0.25rem;
        }

        .navbar-avatar {
            width: 36px;
            height: 36px;
            font-size: 0.95rem;
        }

        /* Modern, Simple Dropdown */
        .dropdown-menu-modern {
            border: 1px solid #3d4957;
            background-color: #222e3c;
            box-shadow: 0 8px 16px rgba(0,0,0,0.4);
            border-radius: 4px;
            padding: 0;
            overflow: hidden;
            margin-top: 10px !important;
        }

        /* Logout Button - Full width hover effect */
        .dropdown-item.logout-link {
            color: #fc544b !important;
            font-weight: 500;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            width: 100%;
            border: none;
            background: transparent;
            transition: background 0.2s ease;
        }

            .dropdown-item.logout-link:hover {
                background-color: rgba(252, 84, 75, 0.1) !important;
            }

        .sidebar-user-subtitle {
            font-size: 0.75rem;
            color: #adb5bd;
            display: block;
            margin-top: 2px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            max-width: 150px;
        }

        /* Footer Styling */
        .footer {
            padding: 1.5rem 0;
            background: transparent;
            border-top: 1px solid rgba(255,255,255,0.05);
        }

        .footer-link {
            color: #adb5bd;
            text-decoration: none;
            font-size: 0.85rem;
            transition: color 0.2s;
        }

            .footer-link:hover {
                color: #3b7ddd;
            }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

@{
        var currentUser = await UserManager.GetUserAsync(User);
        var email = currentUser?.Email ?? "Owner";
        var initial = email.Substring(0, 1).ToUpper();
}

<body data-theme="dark" data-layout="fluid" data-sidebar-position="left" data-sidebar-layout="default">
    <div class="wrapper">
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <span class="align-middle">SimplyAppoint</span>
                </a>

                <div class="sidebar-user">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="owner-avatar">@initial</div>
                        </div>
                        <div class="flex-grow-1 ps-3">
                            <a class="sidebar-user-title dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                Business Owner
                            </a>
                            <div class="dropdown-menu dropdown-menu-start dropdown-menu-modern">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="m-0">
                                    <button type="submit" class="dropdown-item logout-link">
                                        <i class="align-middle me-2" data-feather="log-out"></i> Log out
                                    </button>
                                </form>
                            </div>
                            <span class="sidebar-user-subtitle">@email</span>
                        </div>
                    </div>
                </div>

                <ul class="sidebar-nav">
                    <li class="sidebar-header">Management</li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="align-middle" data-feather="home"></i> <span class="align-middle">Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Calendar" asp-action="Index">
                            <i class="align-middle" data-feather="calendar"></i> <span class="align-middle">Calendar</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Appointments" asp-action="Index">
                            <i class="align-middle" data-feather="clock"></i> <span class="align-middle">Appointments</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Services" asp-action="Index">
                            <i class="align-middle" data-feather="scissors"></i> <span class="align-middle">Services</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Customers" asp-action="Index">
                            <i class="align-middle" data-feather="user"></i> <span class="align-middle">Customers</span>
                        </a>
                    </li>

                    <li class="sidebar-header">System</li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="Admin" asp-controller="Settings" asp-action="Index">
                            <i class="align-middle" data-feather="settings"></i> <span class="align-middle">Settings</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

                <form class="d-none d-sm-inline-block">
                    <div class="input-group input-group-navbar">
                        <input type="text" class="form-control" placeholder="Search..." aria-label="Search">
                        <button class="btn" type="button">
                            <i class="align-middle" data-feather="search"></i>
                        </button>
                    </div>
                </form>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle navbar-user-link" href="#" data-bs-toggle="dropdown">
                                <div class="owner-avatar navbar-avatar">@initial</div>
                                <span class="text-dark ms-2 d-none d-lg-inline-block">Business Owner</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end dropdown-menu-modern">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="m-0">
                                    <button type="submit" class="dropdown-item logout-link">
                                        <i class="align-middle me-2" data-feather="log-out"></i> Log out
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </main>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <span class="text-muted">© @DateTime.Now.Year - </span>
                                <strong>SimplyAppoint</strong>
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a class="footer-link text-decoration-none" asp-area="Admin" asp-controller="Dashboard" asp-action="Privacy">Privacy Policy</a>
                                </li>
                                <li class="list-inline-item mx-2 text-muted">|</li>
                                <li class="list-inline-item">
                                    <a class="footer-link text-decoration-none" asp-area="Admin" asp-controller="Dashboard" asp-action="Support">Support</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/AdminKit/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>