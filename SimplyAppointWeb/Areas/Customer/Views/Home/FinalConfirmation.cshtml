@model Business

@{
    ViewData["Title"] = "Termin Potvrđen";
    Layout = "_CustomerLayout";
}

<style>
    .confirmation-wrapper {
        position: relative;
        min-height: 100vh;
        background: #f8fafc !important;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: 'Inter', sans-serif;
    }

    /* Dinamična pozadina */
    .bg-circle {
        position: absolute;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(25, 135, 84, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
        border-radius: 50%;
        z-index: 0;
    }

    .custom-card {
        background: #ffffff;
        border: none;
        border-radius: 30px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
        z-index: 1;
        max-width: 500px;
        width: 100%;
        overflow: hidden;
    }

    .success-header {
        background: #198754;
        padding: 40px 20px;
        text-align: center;
        color: white;
    }

    .check-circle {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        backdrop-filter: blur(5px);
        animation: pulseCheck 2s infinite;
    }

    .info-box {
        background: #f1f5f9;
        border-radius: 20px;
        padding: 20px;
        margin: 25px 0;
        border: 1px solid #e2e8f0;
    }

    .btn-return {
        background: #1e293b;
        color: white;
        border: none;
        padding: 14px 30px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        width: 100%;
    }

    .btn-return:hover {
        background: #0f172a;
        transform: translateY(-2px);
        color: white;
    }

    @@keyframes pulseCheck {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 15px rgba(255, 255, 255, 0); }
        100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
    }
</style>

<div class="confirmation-wrapper">
    <div class="bg-circle"></div>

    <div class="custom-card">
        <div class="success-header">
            <div class="check-circle">
                <i data-feather="check" style="width: 40px; height: 40px; stroke-width: 3;"></i>
            </div>
            <h2 class="fw-bold m-0">Termin je potvrđen!</h2>
        </div>

        <div class="p-4 p-md-5 text-center">
            <h5 class="text-secondary mb-1">Hvala vam na povjerenju.</h5>
            <p class="text-muted">Vaša rezervacija kod <strong>@Model.Name</strong> je uspješno obrađena.</p>

            <div class="info-box">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <i data-feather="mail" class="text-success me-2" style="width: 20px;"></i>
                    <span class="fw-bold text-dark">Provjerite svoj e-mail</span>
                </div>
                <p class="small text-muted mb-0">
                    Poslali smo vam potvrdu sa svim detaljima termina, cijenom i lokacijom.
                </p>
            </div>

            <a asp-action="Details" asp-route-slug="@Model.Slug" class="btn-return shadow-sm">
                Vrati se na početnu
            </a>

            <div class="mt-4 d-flex justify-content-center gap-3 text-muted" style="font-size: 12px; opacity: 0.7;">
                <span><i data-feather="shield" class="me-1" style="width: 12px;"></i> Verificirano</span>
                <span>•</span>
                <span><i data-feather="clock" class="me-1" style="width: 12px;"></i> @DateTime.Now.ToString("HH:mm")</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        feather.replace();
    </script>
}