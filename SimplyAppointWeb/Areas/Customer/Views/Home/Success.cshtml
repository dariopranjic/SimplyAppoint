@model Business
@{
    Layout = "_CustomerLayout";
}

<div class="customer-page d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">

                @* Success Notification Toast (Optional but highly recommended) *@
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show rounded-4 mb-4 border-0 shadow-sm" role="alert">
                        <i data-feather="check-circle" class="me-2"></i> @TempData["success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @* Success Icon *@
                <div class="mb-4 d-inline-flex align-items-center justify-content-center"
                     style="width: 100px; height: 100px; background: rgba(32, 201, 151, 0.1); border-radius: 50%;">
                    <i data-feather="mail" style="width: 48px; height: 48px; color: #20c997;"></i>
                </div>

                <h1 class="fw-black mb-3">Check your inbox!</h1>
                <p class="text-muted fs-5 mb-5">
                    We've sent a confirmation link to your email. Please click the link to finalize your appointment at <strong>@Model.Name</strong>.
                </p>

                <div class="card border-0 rounded-5 p-4 customer-card text-start mb-4 shadow-sm">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-4">
                                <i data-feather="alert-circle" class="text-primary"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Didn't see it?</h6>
                                <p class="small text-muted mb-0">Check your spam folder or wait 2-3 minutes.</p>
                            </div>
                        </div>

                        @* Form for Resending *@
                        <form asp-area="Customer" asp-controller="Home" asp-action="ResendConfirmation" method="post" class="ms-3">
                            @* Hidden input to pass the slug back to the action *@
                            <input type="hidden" name="slug" value="@Model.Slug" />

                            <button type="submit" class="btn btn-sm customer-pill px-3">
                                <i data-feather="refresh-cw" class="me-1" style="width: 14px; height: 14px;"></i> Resend
                            </button>
                        </form>
                    </div>
                </div>

                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-slug="@Model.Slug" class="btn btn-link text-muted fw-bold text-decoration-none">
                    <i data-feather="chevron-left" class="me-1"></i> Back to Business
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Refresh feather icons after page load
        feather.replace();
    </script>
}