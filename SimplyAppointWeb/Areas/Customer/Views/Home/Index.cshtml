@{
    ViewData["Title"] = "Book Appointment";
    
}

<style>
    /* ===== SimplyAppoint Public Booking UI (modern, no JS) ===== */

    .sb-wrap {
        max-width: 1160px;
    }

    .sb-hero {
        border-radius: 18px;
        border: 1px solid rgba(0,0,0,.06);
        background: linear-gradient(180deg, rgba(59,130,246,.10), rgba(255,255,255,0));
        padding: 1.25rem;
    }

    .sb-brand {
        display: flex;
        gap: .9rem;
        align-items: center;
    }

    .sb-logo {
        width: 56px;
        height: 56px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        background: rgba(59,130,246,.12);
        border: 1px solid rgba(59,130,246,.18);
    }

        .sb-logo i {
            width: 22px;
            height: 22px;
        }

    .sb-meta {
        color: rgba(0,0,0,.60);
        font-size: .92rem;
    }

    .sb-stepper {
        display: flex;
        gap: .6rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .sb-step {
        border: 1px solid rgba(0,0,0,.08);
        background: rgba(255,255,255,.75);
        border-radius: 999px;
        padding: .45rem .7rem;
        font-weight: 700;
        font-size: .9rem;
        display: flex;
        align-items: center;
        gap: .45rem;
    }

        .sb-step .sb-dot {
            width: 8px;
            height: 8px;
            border-radius: 999px;
            background: rgba(0,0,0,.22);
            display: inline-block;
        }

        .sb-step.active {
            border-color: rgba(59,130,246,.30);
            background: rgba(59,130,246,.10);
        }

            .sb-step.active .sb-dot {
                background: rgba(59,130,246,.9);
            }

    .sb-card {
        border-radius: 18px;
        border: 1px solid rgba(0,0,0,.08);
        box-shadow: 0 10px 30px rgba(0,0,0,.04);
        overflow: hidden;
    }

        .sb-card .card-header {
            background: rgba(255,255,255,.85);
            border-bottom: 1px solid rgba(0,0,0,.06);
        }

    .sb-title {
        font-weight: 800;
        letter-spacing: -.02em;
        margin: 0;
    }

    .sb-sub {
        color: rgba(0,0,0,.58);
        margin: .25rem 0 0 0;
        font-size: .95rem;
    }

    /* Service cards (radio) */
    .sb-radio {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .sb-service {
        border: 1px solid rgba(0,0,0,.10);
        border-radius: 16px;
        padding: .95rem;
        background: #fff;
        transition: transform .10s ease, border-color .12s ease, box-shadow .12s ease;
        cursor: pointer;
        height: 100%;
    }

        .sb-service:hover {
            transform: translateY(-1px);
            border-color: rgba(59,130,246,.30);
            box-shadow: 0 12px 28px rgba(0,0,0,.06);
        }

    .sb-service-top {
        display: flex;
        justify-content: space-between;
        gap: .75rem;
        align-items: flex-start;
    }

    .sb-badge {
        border: 1px solid rgba(59,130,246,.22);
        background: rgba(59,130,246,.10);
        color: rgba(29,78,216,.95);
        border-radius: 999px;
        padding: .25rem .55rem;
        font-weight: 800;
        font-size: .8rem;
        white-space: nowrap;
    }

    .sb-service h5 {
        font-weight: 800;
        margin: 0;
        letter-spacing: -.01em;
    }

    .sb-service p {
        margin: .35rem 0 0 0;
        color: rgba(0,0,0,.58);
        font-size: .93rem;
    }

    .sb-kpis {
        display: flex;
        gap: .75rem;
        margin-top: .75rem;
        flex-wrap: wrap;
    }

    .sb-kpi {
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 12px;
        padding: .45rem .6rem;
        background: rgba(0,0,0,.02);
        font-weight: 800;
        font-size: .9rem;
        color: rgba(0,0,0,.75);
    }

        .sb-kpi span {
            font-weight: 700;
            color: rgba(0,0,0,.48);
            margin-right: .25rem;
        }

    /* Selected style */
    .sb-radio:checked + .sb-service {
        border-color: rgba(59,130,246,.55);
        box-shadow: 0 16px 38px rgba(59,130,246,.12);
        background: linear-gradient(180deg, rgba(59,130,246,.08), rgba(255,255,255,1));
    }

    /* Date + time */
    .sb-field {
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,.10);
        padding: .7rem .85rem;
    }

    .sb-muted {
        color: rgba(0,0,0,.55);
        font-size: .92rem;
    }

    /* Time pills (radio) */
    .sb-time {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .sb-slot {
        display: block;
        text-align: center;
        padding: .65rem .65rem;
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,.10);
        background: #fff;
        font-weight: 900;
        cursor: pointer;
        transition: transform .10s ease, border-color .12s ease, box-shadow .12s ease;
        user-select: none;
    }

        .sb-slot:hover {
            transform: translateY(-1px);
            border-color: rgba(59,130,246,.35);
            box-shadow: 0 10px 24px rgba(0,0,0,.06);
        }

    .sb-time:checked + .sb-slot {
        border-color: rgba(59,130,246,.60);
        background: rgba(59,130,246,.10);
        box-shadow: 0 14px 34px rgba(59,130,246,.14);
    }

    .sb-slot.disabled {
        opacity: .45;
        cursor: not-allowed;
        background: rgba(0,0,0,.02);
        transform: none !important;
        box-shadow: none !important;
    }

    /* Summary (sticky on desktop) */
    @@media (min-width: 992px) {
        .sb-sticky {
            position: sticky;
            top: 1.25rem;
        }
    }

    .sb-sum {
        border-radius: 18px;
        border: 1px solid rgba(0,0,0,.08);
        background: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,.04);
    }

    .sb-sum-row {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        padding: .55rem 0;
        border-bottom: 1px solid rgba(0,0,0,.06);
    }

        .sb-sum-row:last-child {
            border-bottom: 0;
        }

        .sb-sum-row .k {
            color: rgba(0,0,0,.55);
            font-weight: 700;
        }

        .sb-sum-row .v {
            font-weight: 900;
            color: rgba(0,0,0,.78);
            text-align: right;
        }

    .sb-cta {
        border-radius: 14px;
        padding: .85rem 1rem;
        font-weight: 900;
    }

    .sb-note {
        border-radius: 14px;
        border: 1px dashed rgba(0,0,0,.14);
        background: rgba(0,0,0,.02);
        padding: .8rem .9rem;
        color: rgba(0,0,0,.60);
        font-size: .92rem;
    }
</style>

<div class="container py-4 sb-wrap">
    <!-- HERO -->
    <div class="sb-hero mb-3">
        <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
            <div class="sb-brand">
                <div class="sb-logo">
                    <i class="align-middle text-primary" data-feather="scissors"></i>
                </div>
                <div>
                    <h2 class="sb-title mb-1">SimplyAppoint Studio</h2>
                    <div class="sb-meta">
                        <span class="me-2"><i class="align-middle me-1" data-feather="map-pin"></i> Zagreb</span>
                        <span class="me-2"><i class="align-middle me-1" data-feather="clock"></i> Mon–Fri 09:00–18:00</span>
                        <span><i class="align-middle me-1" data-feather="star"></i> 4.9</span>
                    </div>
                </div>
            </div>

            <div class="text-end">
                <a href="#" class="btn btn-light bg-white">
                    <i class="align-middle me-1" data-feather="phone"></i> Contact
                </a>
            </div>
        </div>

        <div class="sb-stepper">
            <div class="sb-step active"><span class="sb-dot"></span> 1. Service</div>
            <div class="sb-step"><span class="sb-dot"></span> 2. Time</div>
            <div class="sb-step"><span class="sb-dot"></span> 3. Details</div>
            <div class="sb-step"><span class="sb-dot"></span> 4. Confirm</div>
        </div>
    </div>

    <div class="row g-3">
        <!-- LEFT: main booking -->
        <div class="col-12 col-lg-8">
            <!-- SERVICE -->
            <div class="card sb-card mb-3">
                <div class="card-header">
                    <h4 class="sb-title">Choose a service</h4>
                    <p class="sb-sub">Pick what you want to book. You’ll select time next.</p>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="w-100">
                                <input class="sb-radio" type="radio" name="ServiceId" value="1" />
                                <div class="sb-service">
                                    <div class="sb-service-top">
                                        <div>
                                            <h5>Haircut</h5>
                                            <p>Classic haircut + wash included.</p>
                                        </div>
                                        <span class="sb-badge">Popular</span>
                                    </div>
                                    <div class="sb-kpis">
                                        <div class="sb-kpi"><span>Duration</span>45 min</div>
                                        <div class="sb-kpi"><span>Price</span>€ 25</div>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="w-100">
                                <input class="sb-radio" type="radio" name="ServiceId" value="2" />
                                <div class="sb-service">
                                    <div class="sb-service-top">
                                        <div>
                                            <h5>Beard Trim</h5>
                                            <p>Clean shaping + line-up.</p>
                                        </div>
                                        <span class="sb-badge">Fast</span>
                                    </div>
                                    <div class="sb-kpis">
                                        <div class="sb-kpi"><span>Duration</span>20 min</div>
                                        <div class="sb-kpi"><span>Price</span>€ 12</div>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="w-100">
                                <input class="sb-radio" type="radio" name="ServiceId" value="3" />
                                <div class="sb-service">
                                    <div class="sb-service-top">
                                        <div>
                                            <h5>Nails</h5>
                                            <p>Full manicure service.</p>
                                        </div>
                                        <span class="sb-badge">Care</span>
                                    </div>
                                    <div class="sb-kpis">
                                        <div class="sb-kpi"><span>Duration</span>60 min</div>
                                        <div class="sb-kpi"><span>Price</span>€ 30</div>
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="w-100">
                                <input class="sb-radio" type="radio" name="ServiceId" value="4" />
                                <div class="sb-service">
                                    <div class="sb-service-top">
                                        <div>
                                            <h5>Color</h5>
                                            <p>Consultation + full coloring.</p>
                                        </div>
                                        <span class="sb-badge">Long</span>
                                    </div>
                                    <div class="sb-kpis">
                                        <div class="sb-kpi"><span>Duration</span>90 min</div>
                                        <div class="sb-kpi"><span>Price</span>€ 60</div>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="sb-note mt-3">
                        <strong>Tip:</strong> If you support staff later, you can add a “Choose staff” step between Service and Time.
                    </div>
                </div>
            </div>

            <!-- TIME -->
            <div class="card sb-card mb-3">
                <div class="card-header">
                    <h4 class="sb-title">Pick a time</h4>
                    <p class="sb-sub">Choose a date first, then select one of the available slots.</p>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-12 col-md-5">
                            <label class="form-label fw-bold">Date</label>
                            <input class="form-control sb-field" type="date" name="Date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <div class="sb-muted mt-2">Timezone: Europe/Zagreb</div>
                        </div>
                        <div class="col-12 col-md-7">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <div>
                                    <label class="form-label fw-bold mb-1">Available times</label>
                                    <div class="sb-muted">Select one slot</div>
                                </div>
                                <span class="badge badge-success-light">High availability</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <div class="row g-2">
                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="09:00" />
                                <span class="sb-slot">09:00</span>
                            </label>
                        </div>
                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="09:30" />
                                <span class="sb-slot">09:30</span>
                            </label>
                        </div>
                        <div class="col-4 col-md-3">
                            <span class="sb-slot disabled">10:00</span>
                        </div>
                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="10:30" />
                                <span class="sb-slot">10:30</span>
                            </label>
                        </div>

                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="11:00" />
                                <span class="sb-slot">11:00</span>
                            </label>
                        </div>
                        <div class="col-4 col-md-3">
                            <span class="sb-slot disabled">11:30</span>
                        </div>
                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="12:00" />
                                <span class="sb-slot">12:00</span>
                            </label>
                        </div>
                        <div class="col-4 col-md-3">
                            <label class="w-100">
                                <input class="sb-time" type="radio" name="StartTime" value="12:30" />
                                <span class="sb-slot">12:30</span>
                            </label>
                        </div>
                    </div>

                    <div class="sb-muted mt-3">
                        Grey slots are already booked.
                    </div>
                </div>
            </div>

            <!-- DETAILS -->
            <div class="card sb-card">
                <div class="card-header">
                    <h4 class="sb-title">Your details</h4>
                    <p class="sb-sub">So the business can confirm your booking.</p>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Full name</label>
                            <input class="form-control sb-field" type="text" name="CustomerName" placeholder="e.g. Ana Kovač" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">Phone</label>
                            <input class="form-control sb-field" type="tel" name="CustomerPhone" placeholder="+385 ..." />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Email (optional)</label>
                            <input class="form-control sb-field" type="email" name="CustomerEmail" placeholder="name@email.com" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Note (optional)</label>
                            <textarea class="form-control sb-field" name="Note" rows="3" placeholder="Any preference or request…"></textarea>
                        </div>

                        <div class="col-12 d-flex justify-content-between flex-wrap gap-2 mt-2">
                            <a href="#" class="btn btn-light bg-white">
                                <i class="align-middle me-1" data-feather="arrow-left"></i> Change selection
                            </a>
                            <button type="submit" class="btn btn-primary sb-cta">
                                Confirm booking <i class="align-middle ms-2" data-feather="check"></i>
                            </button>
                        </div>

                        <div class="col-12 sb-muted">
                            By confirming, you agree to the business booking rules (cancellation / no-show).
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- RIGHT: Summary -->
        <div class="col-12 col-lg-4">
            <div class="sb-sticky">
                <div class="p-3 sb-sum">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="sb-muted">Booking summary</div>
                            <div class="fw-bold" style="font-size:1.15rem;">SimplyAppoint Studio</div>
                        </div>
                        <span class="badge badge-primary-light">Secure</span>
                    </div>

                    <hr class="my-3" />

                    <div class="sb-sum-row">
                        <div class="k">Service</div>
                        <div class="v">—</div>
                    </div>
                    <div class="sb-sum-row">
                        <div class="k">Date</div>
                        <div class="v">@DateTime.Today.ToString("ddd, dd MMM")</div>
                    </div>
                    <div class="sb-sum-row">
                        <div class="k">Time</div>
                        <div class="v">—</div>
                    </div>
                    <div class="sb-sum-row">
                        <div class="k">Duration</div>
                        <div class="v">—</div>
                    </div>

                    <hr class="my-3" />

                    <div class="sb-sum-row">
                        <div class="k">Total</div>
                        <div class="v">€ —</div>
                    </div>

                    <div class="sb-note mt-3">
                        <div class="fw-bold mb-1">Cancellation policy</div>
                        Free cancellation up to 2 hours before the appointment.
                    </div>

                    <div class="d-grid mt-3">
                        <button type="button" class="btn btn-outline-primary sb-cta">
                            <i class="align-middle me-2" data-feather="message-circle"></i> Ask a question
                        </button>
                    </div>

                    <div class="sb-muted mt-3">
                        Powered by SimplyAppoint
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
