@model Business
@{
    Layout = "_CustomerLayout";
}

<div class="booking-hero">
    <div class="container">
        <span class="hero-badge">Booking Experience</span>
        <h1 class="display-4 fw-black mb-2 customer-title">@Model.Name</h1>
        <p class="text-muted fw-bold">
            <i data-feather="map-pin" class="me-1 text-primary"></i> @Model.Address
        </p>
    </div>
</div>

<div class="container pb-5">
    <form asp-action="ConfirmBooking" method="post" id="bookingForm">
        <input type="hidden" name="slug" value="@Model.Slug" />
        <input type="hidden" name="firstName" value="@ViewBag.FirstName" />
        <input type="hidden" name="lastName" value="@ViewBag.LastName" />
        <input type="hidden" name="email" value="@ViewBag.Email" />

        <div class="row g-5">
            <div class="col-lg-7">
                <h4 class="fw-black mb-4 customer-title">1. Choose Service</h4>
                <div class="service-list">
                    @foreach (var s in Model.Services.Where(x => x.IsActive))
                    {
                        <input type="radio" name="serviceId" id="svc-@s.Id" value="@s.Id" class="service-input" required onchange="enableStepTwo()" />
                        <label for="svc-@s.Id" class="service-card shadow-sm">
                            <div>
                                <h5 class="fw-bold mb-1">@s.Name</h5>
                                <span class="text-muted small fw-bold">
                                    <i data-feather="clock" style="width:14px; height:14px; margin-right:4px;"></i>@s.DurationMinutes Mins
                                </span>
                            </div>
                            <div class="price-tag fw-black fs-4 text-primary">@s.Price.ToString("C")</div>
                        </label>
                    }
                </div>
            </div>

            <div class="col-lg-5">
                <div id="stepTwoContainer" class="card border-0 shadow-lg rounded-5 p-4 sticky-sidebar customer-card" style="opacity: 0.5; pointer-events: none; transition: all 0.3s ease;">
                    <h4 class="fw-black mb-4 customer-title">2. Pick a Time</h4>

                    <div class="mb-4">
                        <label class="small fw-black text-muted text-uppercase mb-2 d-block">Select Day</label>
                        <input type="date" name="appointmentDate" id="dateInput"
                               class="form-control p-3 border-0 rounded-4 fw-bold customer-input"
                               min="@DateTime.Now.ToString("yyyy-MM-dd")" required onchange="fetchAvailableTimes()" disabled />
                    </div>

                    <div id="timeSelectionArea" style="display: none;">
                        <label class="small fw-black text-muted text-uppercase mb-3 d-block">Available Slots</label>
                        <div id="slotsContainer" class="row g-2">
                        </div>

                        <button type="submit" id="submitBtn" class="btn btn-primary customer-primary w-100 py-3 mt-4 fw-black rounded-pill">
                            Confirm Appointment
                        </button>
                    </div>

                    <div id="datePlaceholder" class="text-center py-5 border-2 border-dashed rounded-4">
                        <p id="placeholderText" class="text-muted small fw-bold mb-0">Select a service first</p>
                    </div>

                    <div id="loadingTimes" class="text-center py-4" style="display:none;">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="small fw-bold mt-2">Finding available slots...</p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const dateInput = document.getElementById('dateInput');
        const stepTwo = document.getElementById('stepTwoContainer');
        const placeholderText = document.getElementById('placeholderText');
        const timeArea = document.getElementById('timeSelectionArea');
        const placeholderDiv = document.getElementById('datePlaceholder');
        const submitBtn = document.getElementById('submitBtn');
        const slotsContainer = document.getElementById('slotsContainer');
        const loadingTimes = document.getElementById('loadingTimes');

        function enableStepTwo() {
            stepTwo.style.opacity = "1";
            stepTwo.style.pointerEvents = "auto";
            dateInput.disabled = false;
            placeholderText.innerText = "Please select a date to see times";

            // Ako je datum već odabran, osvježi vremena za novu uslugu
            if(dateInput.value) fetchAvailableTimes();
        }

        async function fetchAvailableTimes() {
            const serviceId = document.querySelector('input[name="serviceId"]:checked')?.value;
            const date = dateInput.value;

            if (!serviceId || !date) return;

            // Prikaži loading, sakrij ostalo
            loadingTimes.style.display = 'block';
            timeArea.style.display = 'none';
            placeholderDiv.style.display = 'none';
            slotsContainer.innerHTML = '';

            try {
                const response = await fetch(`/Customer/Home/GetAvailableSlots?serviceId=${serviceId}&date=${date}`);
                const slots = await response.json();

                loadingTimes.style.display = 'none';

                if (slots && slots.length > 0) {
                    slots.forEach(time => {
                        const col = document.createElement('div');
                        col.className = 'col-4';
                        col.innerHTML = `
                            <input type="radio" name="time" id="time-${time}" value="${time}" class="time-input" required />
                            <label for="time-${time}" class="time-label shadow-sm">${time}</label>
                        `;
                        slotsContainer.appendChild(col);
                    });
                    timeArea.style.display = 'block';
                } else {
                    placeholderDiv.style.display = 'block';
                    placeholderText.innerText = "No available slots for this day. Try another.";
                }
            } catch (error) {
                console.error("Error fetching slots:", error);
                loadingTimes.style.display = 'none';
                placeholderDiv.style.display = 'block';
                placeholderText.innerText = "Error loading times. Please try again.";
            }
        }

        document.addEventListener("DOMContentLoaded", function() {
            var checkedService = document.querySelector('input[name="serviceId"]:checked');
            if (checkedService) enableStepTwo();
            if (dateInput.value) fetchAvailableTimes();
        });

        window.addEventListener('pageshow', function(event) {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'Confirm Appointment';
            }
        });

        document.getElementById('bookingForm').addEventListener('submit', function (e) {
            if (submitBtn) {
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
                submitBtn.disabled = true;
            }
        });
    </script>
}