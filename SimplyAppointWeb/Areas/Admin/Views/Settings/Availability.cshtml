@{
    ViewData["Title"] = "Availability";
    Layout = "_AdminLayout";

    // Dummy data (replace later with your model)
    var tz = "Europe/Zagreb";

    var weekly = new[]
    {
        new { Day = "Mon", Name="Monday",    Open=true,  From="09:00", To="18:00" },
        new { Day = "Tue", Name="Tuesday",   Open=true,  From="09:00", To="18:00" },
        new { Day = "Wed", Name="Wednesday", Open=true,  From="09:00", To="18:00" },
        new { Day = "Thu", Name="Thursday",  Open=true,  From="09:00", To="18:00" },
        new { Day = "Fri", Name="Friday",    Open=true,  From="09:00", To="18:00" },
        new { Day = "Sat", Name="Saturday",  Open=false, From="10:00", To="14:00" },
        new { Day = "Sun", Name="Sunday",    Open=false, From="10:00", To="14:00" },
    };

    // NEW: time off as ranges (vacation / holiday)
    var timeOff = new[]
    {
        new { From="2026-01-06", To="2026-01-06", Type="Day off", Note="Holiday" },
        new { From="2026-01-20", To="2026-02-02", Type="Vacation", Note="2 weeks holiday" },
    };
}

<style>
    /* Small scoped helpers (keeps AdminKit feel) */
    .sa-dayrow {
        padding: .65rem .75rem;
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,.08);
        background: rgba(255,255,255,.02);
    }

        .sa-dayrow + .sa-dayrow {
            margin-top: .65rem;
        }

    .sa-dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        display: inline-block;
        background: rgba(255,255,255,.25);
    }

        .sa-dot.on {
            background: rgba(16,185,129,.9);
        }

        .sa-dot.off {
            background: rgba(239,68,68,.85);
        }

    .sa-mini {
        color: rgba(255,255,255,.55);
        font-size: .85rem;
    }

    .sa-pill {
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.03);
        border-radius: 12px;
        padding: .55rem .75rem;
    }

    .sa-range {
        border: 1px dashed rgba(255,255,255,.14);
        background: rgba(255,255,255,.02);
        border-radius: 14px;
        padding: .9rem 1rem;
    }
</style>

<div class="row mb-2 mb-xl-3 align-items-center">
    <div class="col-auto">
        <h3 class="mb-0"><strong>Availability</strong></h3>
    </div>

    <div class="col-auto ms-auto text-end mt-n1">
        <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="btn btn-light bg-white me-2">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to Settings
        </a>
        <button type="submit" form="AvailabilityForm" class="btn btn-primary">
            <i class="align-middle me-1" data-feather="check"></i> Save changes
        </button>
    </div>
</div>

<div class="row g-3">
    <div class="col-12 col-lg-8 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <div>
                    <h5 class="card-title mb-0">Weekly schedule</h5>
                    <div class="text-muted">Set opening hours per day</div>
                </div>
            </div>

            <div class="card-body">
                <form asp-area="Admin" asp-controller="Settings" asp-action="Availability" method="post" novalidate id="AvailabilityForm">

                    <!-- Weekly rows -->
                    <div class="mb-4">
                        @for (int i = 0; i < weekly.Length; i++)
                        {
                            var d = weekly[i];

                            <div class="sa-dayrow">
                                <div class="row align-items-center g-2">
                                    <div class="col-12 col-md-4 d-flex align-items-center gap-2">
                                        <span class="sa-dot @(d.Open ? "on" : "off")"></span>
                                        <div class="fw-semibold">@d.Name</div>

                                        <div class="ms-auto ms-md-0">
                                            <div class="form-check form-switch m-0">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       name="Week[@i].Open"
                                                       value="true"
                                                       @(d.Open ? "checked" : "") />
                                                <label class="form-check-label sa-mini">
                                                    @(d.Open ? "Open" : "Closed")
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-8">
                                        <div class="row g-2">
                                            <div class="col-6 col-lg-4">
                                                <label class="form-label sa-mini mb-1">From</label>
                                                <input type="time"
                                                       class="form-control"
                                                       name="Week[@i].From"
                                                       value="@d.From" />
                                            </div>
                                            <div class="col-6 col-lg-4">
                                                <label class="form-label sa-mini mb-1">To</label>
                                                <input type="time"
                                                       class="form-control"
                                                       name="Week[@i].To"
                                                       value="@d.To" />
                                            </div>

                                            <div class="col-12 col-lg-4 d-flex align-items-end justify-content-lg-end">
                                                <button type="button" class="btn btn-light bg-white w-100 w-lg-auto">
                                                    <i class="align-middle me-1" data-feather="x"></i> Clear
                                                </button>
                                            </div>
                                        </div>

                                        <input type="hidden" name="Week[@i].Day" value="@d.Day" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4" />

                    <div class="mb-0">
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-2">
                            <div>
                                <h6 class="text-muted mb-0">Time off</h6>
                                <div class="sa-mini">Add a single day or a date range (vacation, holidays, sick leave)</div>
                            </div>
                        </div>

                        <!-- Add range (UI only) -->
                        <div class="sa-range mb-3">
                            <div class="row g-2">
                                <div class="col-12 col-md-4">
                                    <label class="form-label sa-mini mb-1">From</label>
                                    <input type="date" class="form-control" name="TimeOffNew.From" />
                                </div>
                                <div class="col-12 col-md-4">
                                    <label class="form-label sa-mini mb-1">To</label>
                                    <input type="date" class="form-control" name="TimeOffNew.To" />
                                </div>
                                <div class="col-12 col-md-4">
                                    <label class="form-label sa-mini mb-1">Type</label>
                                    <select class="form-select" name="TimeOffNew.Type">
                                        <option selected>Vacation</option>
                                        <option>Holiday</option>
                                        <option>Sick leave</option>
                                        <option>Personal</option>
                                        <option>Closed</option>
                                    </select>
                                </div>

                                <div class="col-12">
                                    <label class="form-label sa-mini mb-1">Note (optional)</label>
                                    <input type="text" class="form-control" name="TimeOffNew.Note" placeholder="e.g. 2 weeks holiday" />
                                </div>

                                <div class="col-12 d-flex justify-content-end gap-2 mt-1">
                                    <button type="button" class="btn btn-light bg-white">
                                        Cancel
                                    </button>
                                    <button type="button" class="btn btn-primary">
                                        <i class="align-middle me-1" data-feather="plus"></i> Add time off
                                    </button>
                                </div>

                                <div class="text-muted small mt-2">
                                    This is UI-only. You’ll wire it to your backend later (ranges recommended for vacations).
                                </div>
                            </div>
                        </div>

                        <div class="list-group">
                            @foreach (var x in timeOff)
                            {
                                var fromDt = DateTime.Parse(x.From);
                                var toDt = DateTime.Parse(x.To);
                                var days = (toDt.Date - fromDt.Date).Days + 1;

                                <div class="list-group-item d-flex align-items-center justify-content-between">
                                    <div>
                                        <div class="fw-semibold">
                                            @fromDt.ToString("ddd, dd MMM yyyy")
                                            @if (x.To != x.From)
                                            {
                                                <span class="text-muted">→</span>
                                                @toDt.ToString("ddd, dd MMM yyyy")
                                            }
                                        </div>

                                        <div class="text-muted small">
                                            <span class="badge badge-primary-light me-2">@x.Type</span>
                                            @x.Note
                                            <span class="ms-2 sa-mini">(@days day@(days == 1 ? "" : "s"))</span>
                                        </div>
                                    </div>

                                    <button type="button" class="btn btn-outline-light btn-sm">
                                        <i class="align-middle" data-feather="trash-2"></i>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                </form>
            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="btn btn-light bg-white">
                    Cancel
                </a>
                <button type="submit" form="AvailabilityForm" class="btn btn-primary">
                    <i class="align-middle me-1" data-feather="check"></i> Save changes
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4 d-flex">
        <div class="d-flex flex-column w-100">

            <!-- Summary -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Timezone</span>
                        <span class="fw-semibold">@tz</span>
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <div class="sa-pill">
                                <div class="sa-mini">Slot step</div>
                                <div class="fw-semibold">15 min</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="sa-pill">
                                <div class="sa-mini">Min notice</div>
                                <div class="fw-semibold">2 h</div>
                            </div>
                        </div>
                    </div>

                    <div class="text-muted small mt-3">
                        Summary is UI-only for now. You’ll compute real values from your model later.
                    </div>
                </div>
            </div>

            <!-- Booking window -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Booking window</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Slot size (minutes)</label>
                        <select class="form-select" name="SlotMinutes">
                            <option>10</option>
                            <option selected>15</option>
                            <option>20</option>
                            <option>30</option>
                        </select>
                        <div class="form-text">Controls spacing of selectable times.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Minimum notice (hours)</label>
                        <select class="form-select" name="MinNoticeHours">
                            <option>No minimum</option>
                            <option>1</option>
                            <option selected>2</option>
                            <option>6</option>
                            <option>12</option>
                            <option>24</option>
                        </select>
                    </div>

                    <div class="mb-0">
                        <label class="form-label">Book up to (days in advance)</label>
                        <select class="form-select" name="MaxDaysInAdvance">
                            <option>7</option>
                            <option>14</option>
                            <option selected>30</option>
                            <option>60</option>
                            <option>90</option>
                        </select>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
