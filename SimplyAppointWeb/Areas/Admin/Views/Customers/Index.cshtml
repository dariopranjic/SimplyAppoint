@{
    ViewData["Title"] = "Customers";
    Layout = "_AdminLayout";

    // Dummy data (replace with your model later)
    var customers = new[]
    {
        new { Id = 1, Name = "Anna K.",   Phone = "+385 91 123 4567", Email = "anna@mail.com",   LastVisit = DateTime.Today.AddDays(-2),  Visits = 6,  Notes = "Prefers short sides", Status = "active" },
        new { Id = 2, Name = "Marko P.",  Phone = "+385 98 555 1020", Email = "marko@mail.com",  LastVisit = DateTime.Today.AddDays(-10), Visits = 2,  Notes = "Call to confirm",      Status = "active" },
        new { Id = 3, Name = "Sara L.",   Phone = "+385 95 777 8899", Email = "sara@mail.com",   LastVisit = DateTime.Today.AddDays(-1),  Visits = 1,  Notes = "First visit",         Status = "new" },
        new { Id = 4, Name = "Ivan M.",   Phone = "+385 91 222 3333", Email = "ivan@mail.com",   LastVisit = DateTime.Today.AddDays(-35), Visits = 9,  Notes = "Often reschedules",    Status = "vip" },
        new { Id = 5, Name = "Maja S.",   Phone = "+385 99 333 4411", Email = "maja@mail.com",   LastVisit = DateTime.Today.AddDays(-60), Visits = 0,  Notes = "No-show once",         Status = "inactive" }
    };

    var total = customers.Length;
    var newCount = customers.Count(c => c.Status == "new");
    var vipCount = customers.Count(c => c.Status == "vip");
    var activeCount = customers.Count(c => c.Status == "active" || c.Status == "vip" || c.Status == "new");
}

<div class="row mb-2 mb-xl-3 align-items-center">
    <div class="col-auto d-none d-sm-block">
        <h3 class="mb-0"><strong>Customers</strong></h3>
    </div>

    <div class="col-auto ms-auto text-end mt-n1">
        <a asp-area="Admin" asp-controller="Customers" asp-action="Upsert" class="btn btn-primary me-2">
            <i class="align-middle me-1" data-feather="plus"></i> Add customer
        </a>
        <a asp-area="Admin" asp-controller="Calendar" asp-action="Index" class="btn btn-light bg-white">
            <i class="align-middle me-1" data-feather="calendar"></i> Calendar
        </a>
    </div>
</div>

<!-- Stats -->
<div class="row">
    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Total Customers</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="users"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@total</h1>
                <div class="mb-0">
                    <span class="badge badge-primary-light">All time</span>
                    <span class="text-muted">in your list</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Active</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="user-check"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@activeCount</h1>
                <div class="mb-0">
                    <span class="badge badge-success-light">Healthy</span>
                    <span class="text-muted">returning customers</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">New (30 days)</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="user-plus"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@newCount</h1>
                <div class="mb-0">
                    <span class="badge badge-success-light">Growing</span>
                    <span class="text-muted">new visits</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">VIP</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="star"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@vipCount</h1>
                <div class="mb-0">
                    <span class="badge badge-warning-light">High value</span>
                    <span class="text-muted">frequent visitors</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Main table -->
    <div class="col-12 col-lg-8 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div>
                        <h5 class="card-title mb-0">Customers</h5>
                        <div class="text-muted">Search, sort and open customer profiles</div>
                    </div>

                    <div class="d-flex gap-2">
                        <div class="dropdown">
                            <button class="btn btn-light bg-white dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="align-middle me-1" data-feather="filter"></i> Quick filter
                            </button>
                            <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 260px;">
                                <div class="mb-2 text-muted fw-semibold">Status</div>
                                <select id="saCustomerStatus" class="form-select">
                                    <option value="all" selected>All</option>
                                    <option value="active">Active</option>
                                    <option value="new">New</option>
                                    <option value="vip">VIP</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <a href="#" class="btn btn-outline-light">
                            <i class="align-middle me-1" data-feather="download"></i> Export
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="saCustomersTable" class="table table-hover my-0 w-100">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th class="d-none d-xl-table-cell">Contact</th>
                                <th>Last Visit</th>
                                <th class="d-none d-xl-table-cell">Visits</th>
                                <th>Status</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in customers)
                            {
                                string badgeClass = c.Status switch
                                {
                                    "vip" => "badge badge-warning-light",
                                    "new" => "badge badge-primary-light",
                                    "inactive" => "badge badge-danger-light",
                                    _ => "badge badge-success-light"
                                };

                                string badgeText = c.Status switch
                                {
                                    "vip" => "VIP",
                                    "new" => "New",
                                    "inactive" => "Inactive",
                                    _ => "Active"
                                };

                                <tr class="sa-customer-row" data-status="@c.Status">
                                    <td>
                                        <div class="fw-semibold">@c.Name</div>
                                        <div class="text-muted small">@c.Notes</div>
                                    </td>
                                    <td class="d-none d-xl-table-cell">
                                        <div class="text-muted small">@c.Phone</div>
                                        <div class="text-muted small">@c.Email</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@c.LastVisit.ToString("dd MMM")</div>
                                        <div class="text-muted small">@c.LastVisit.ToString("ddd")</div>
                                    </td>
                                    <td class="d-none d-xl-table-cell">
                                        <span class="fw-semibold">@c.Visits</span>
                                    </td>
                                    <td>
                                        <span class="@badgeClass">@badgeText</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-area="Admin" asp-controller="Customers" asp-action="Upsert" asp-route-id="@c.Id"
                                           class="btn btn-primary btn-sm">
                                            Open
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-muted mt-3" id="saCustomerCount">Showing @total customers</div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4 d-flex">
        <div class="d-flex flex-column w-100">

            <!-- Overview -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Overview</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Total customers</span>
                        <span class="fw-semibold">@total</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Active</span>
                        <span class="badge badge-success-light">@activeCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">VIP</span>
                        <span class="badge badge-warning-light">@vipCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">New (30 days)</span>
                        <span class="badge badge-primary-light">@newCount</span>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-area="Admin" asp-controller="Customers" asp-action="Upsert" class="btn btn-primary">
                            <i class="align-middle me-2" data-feather="plus"></i> Add customer
                        </a>
                        <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-light bg-white">
                            <i class="align-middle me-2" data-feather="briefcase"></i> Services
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent notes -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Notes</h5>
                </div>
                <div class="card-body pt-2">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <strong>Anna K.</strong>
                                <span class="text-muted small">2d ago</span>
                            </div>
                            <div class="text-muted">Prefers short sides</div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <strong>Marko P.</strong>
                                <span class="text-muted small">10d ago</span>
                            </div>
                            <div class="text-muted">Call to confirm</div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <strong>Ivan M.</strong>
                                <span class="text-muted small">1m ago</span>
                            </div>
                            <div class="text-muted">Often reschedules</div>
                        </a>
                    </div>

                    <div class="d-grid mt-3">
                        <a asp-area="Admin" asp-controller="Customers" asp-action="Index" class="btn btn-light bg-white">
                            View all customers
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick actions -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body pt-2">
                    <div class="row g-2">
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="Calendar" asp-action="Index"
                               class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-2">
                                <i class="align-middle me-2" data-feather="calendar"></i>
                                <span class="fw-semibold">Calendar</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="Appointments" asp-action="Index"
                               class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-2">
                                <i class="align-middle me-2" data-feather="list"></i>
                                <span class="fw-semibold">Appointments</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="Services" asp-action="Index"
                               class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-2">
                                <i class="align-middle me-2" data-feather="briefcase"></i>
                                <span class="fw-semibold">Services</span>
                            </a>
                        </div>
                        <div class="col-6">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                               class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-2">
                                <i class="align-middle me-2" data-feather="bar-chart-2"></i>
                                <span class="fw-semibold">Dashboard</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- AdminKit DataTables bundle (includes jQuery + DataTables) -->
    <script src="~/AdminKit/js/datatables.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            if (window.feather) window.feather.replace();

            var tableEl = document.getElementById("saCustomersTable");
            if (!tableEl || typeof $ === "undefined" || !$.fn || !$.fn.DataTable) return;

            var dt = $("#saCustomersTable").DataTable({
                pageLength: 8,
                lengthChange: false,
                info: false,
                order: [[2, "desc"]], // Last Visit
                columnDefs: [
                    { orderable: false, targets: [5] } // Action
                ]
            });

            // Quick filter by status
            var status = document.getElementById("saCustomerStatus");
            var count = document.getElementById("saCustomerCount");

            function updateCount() {
                var visible = dt.rows({ filter: "applied" }).count();
                count.textContent = "Showing " + visible + " customer" + (visible === 1 ? "" : "s");
            }

            status?.addEventListener("change", function () {
                var v = status.value || "all";
                if (v === "all") {
                    dt.search("").draw();
                } else {
                    // filter by badge text or the data-status column text: easiest is table search
                    dt.search(v === "vip" ? "VIP" : (v === "new" ? "New" : (v === "inactive" ? "Inactive" : "Active"))).draw();
                }
                updateCount();
            });

            dt.on("draw", updateCount);
            updateCount();
        });
    </script>
}
