@model Service

@{
    ViewData["Title"] = "Add a service";
    Layout = "_OnboardingLayout";
}

<div class="admin-card admin-card-lg">
    <div class="admin-header">
        <div class="admin-badge">Step 2 of 5</div>
        <h1 class="admin-title">Add your services</h1>
        <p class="admin-subtitle">What will your clients be booking? Add at least one to continue.</p>
    </div>

    <form asp-controller="Onboarding" asp-action="Services" method="post" class="admin-form">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="BusinessId" />

        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control admin-input" placeholder="e.g. Haircut, Consultation" autofocus />
            <label asp-for="Name">Service name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="DurationMinutes" type="number" min="1" max="1440" class="form-control admin-input" placeholder="30" />
                    <label asp-for="DurationMinutes">Duration (min)</label>
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Price" type="number" min="0.01" step="0.01" class="form-control admin-input" placeholder="0.00" />
                    <label asp-for="Price">Price (€)</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>

        <p class="text-center mb-3">
            <button class="admin-badge admin-dropdown border-0" type="button" data-bs-toggle="collapse" data-bs-target="#bufferSettings">
                + Add buffer times (optional)
            </button>
        </p>

        <div class="collapse" id="bufferSettings">
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="BufferBefore" type="number" min="0" class="form-control admin-input" placeholder="0" />
                        <label asp-for="BufferBefore">Buffer Before (min)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="BufferAfter" type="number" min="0" class="form-control admin-input" placeholder="0" />
                        <label asp-for="BufferAfter">Buffer After (min)</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-column gap-3 mt-4">
            <button type="submit" name="submitAction" value="AddAnother" class="btn admin-btn-add-another">
                + Save and add another service
            </button>

            <div class="admin-actions-row">
                <a asp-action="Business" class="btn btn-outline-secondary admin-btn-soft flex-grow-1">
                    Back
                </a>

                <button type="submit" name="submitAction" value="Next" class="btn btn-primary admin-btn-primary flex-grow-1">
                    Continue
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}