@{
    ViewData["Title"] = "Support Center";
    Layout = "_AdminLayout";
}

<div class="support-dashboard">
    <div class="row align-items-center mb-5">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <h1 class="support-h1">Support Center</h1>
            <p class="support-subtitle">How can our team assist you today?</p>
        </div>
        <div class="col-lg-5">
            <div class="pro-search">
                <i data-feather="search" class="search-icon"></i>
                <input type="text" id="faqSearch" class="pro-search-input" placeholder="Search knowledge base...">
            </div>
        </div>
    </div>

    <div class="row g-4 g-xl-5">
        <div class="col-xl-7">
            <div class="mb-4">
                <span class="support-badge">Knowledge Base</span>
                <h3 class="support-h3 mt-2">Common Questions</h3>
            </div>

            <div class="accordion pro-accordion" id="faqAccordion">
                <div class="accordion-item pro-accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button pro-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#f1">
                            <span class="faq-num">01</span> How do I add a new service?
                        </button>
                    </h2>
                    <div id="f1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body pro-accordion-body">
                            Navigate to the <strong>Services</strong> tab on your dashboard. Click the "Add New" button to set up your pricing, duration, and staff assignments.
                        </div>
                    </div>
                </div>

                <div class="accordion-item pro-accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button pro-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#f2">
                            <span class="faq-num">02</span> Is Google Calendar synchronization available?
                        </button>
                    </h2>
                    <div id="f2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body pro-accordion-body">
                            We are currently finalizing our 2-way sync with <strong>Google and Outlook</strong>. This feature is expected to roll out in the next major update.
                        </div>
                    </div>
                </div>

                <div class="accordion-item pro-accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button pro-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#f3">
                            <span class="faq-num">03</span> How can I update my business hours?
                        </button>
                    </h2>
                    <div id="f3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body pro-accordion-body">
                            Go to <strong>Settings > Business Profile</strong>. You can set daily opening/closing times and even add specific "Break Times" for your staff.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-5">
            <div class="pro-ticket-card">
                <div class="d-flex align-items-center mb-1">
                    <div class="ticket-icon me-3">
                        <i data-feather="message-square"></i>
                    </div>
                    <h3 class="support-h3 mb-0">Submit a Ticket</h3>
                </div>
                <p class="support-success-text mb-4">Average response time: &lt; 45 minutes</p>

                <form id="supportForm">
                    <div class="mb-3">
                        <label class="pro-label">ISSUE CATEGORY</label>
                        <select class="form-select pro-input">
                            <option value="" selected="selected" disabled="disabled">Choose a topic...</option>
                            <option value="tech">Technical Support</option>
                            <option value="billing">Billing Inquiry</option>
                            <option value="feature">Feature Request</option>
                            <option value="other">General Question</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="pro-label">MESSAGE DETAILS</label>
                        <textarea class="form-control pro-input" rows="5" placeholder="Describe your problem in detail..."></textarea>
                    </div>

                    <button type="submit" class="pro-btn-primary w-100">
                        <i data-feather="send" class="me-2" style="width: 16px;"></i> Dispatch Ticket
                    </button>
                </form>

                <div class="text-center mt-4 pt-3 border-top pro-border">
                    <span class="support-muted d-block small mb-1">Urgent matter? Reach out directly:</span>
                    <a href="mailto:support@simplyappoint.com" class="pro-link">support@simplyappoint.com</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .support-dashboard {
            background-color: transparent;
            padding: 1rem;
        }

            .support-dashboard .support-h1 {
                color: #ffffff !important;
                font-size: 2.5rem;
                font-weight: 800;
                margin: 0;
                letter-spacing: -0.5px;
            }

            .support-dashboard .support-h3 {
                color: #ffffff !important;
                font-size: 1.5rem;
                font-weight: 700;
                margin: 0;
            }

            .support-dashboard .support-subtitle {
                color: #38bdf8 !important;
                font-size: 1.1rem;
                margin-top: 5px;
                font-weight: 500;
            }

            .support-dashboard .support-success-text {
                color: #10b981 !important;
                font-size: 0.85rem;
                font-weight: 600;
                margin-left: 55px;
            }

            .support-dashboard .support-muted {
                color: #94a3b8 !important;
            }

        .support-badge {
            display: inline-block;
            background: rgba(56, 189, 248, 0.1);
            color: #38bdf8;
            padding: 4px 12px;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .pro-search {
            background-color: #1e293b;
            border: 1px solid #334155;
            border-radius: 12px;
            display: flex;
            align-items: center;
            padding: 0 16px;
            height: 50px;
            transition: all 0.2s ease;
        }

            .pro-search:focus-within {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            }

            .pro-search .search-icon {
                color: #94a3b8;
                width: 18px;
            }

        .pro-search-input {
            background: transparent;
            border: none;
            color: #ffffff;
            width: 100%;
            padding-left: 12px;
            font-size: 0.95rem;
            outline: none;
        }

            .pro-search-input::placeholder {
                color: #64748b;
            }

        .pro-accordion-item {
            background-color: #1e293b !important;
            border: 1px solid #334155 !important;
            border-radius: 12px !important;
            margin-bottom: 12px;
            overflow: hidden;
        }

        .pro-accordion-button {
            background-color: transparent !important;
            color: #f8fafc !important;
            font-weight: 600;
            padding: 18px 24px;
            box-shadow: none !important;
        }

            .pro-accordion-button:not(.collapsed) {
                color: #3b82f6 !important;
                background-color: rgba(59, 130, 246, 0.05) !important;
                border-bottom: 1px solid #334155;
            }

        .faq-num {
            color: #3b82f6;
            font-family: monospace;
            font-size: 1.1rem;
            margin-right: 12px;
            opacity: 0.8;
        }

        .pro-accordion-body {
            color: #cbd5e1 !important;
            padding: 20px 24px;
            line-height: 1.6;
            font-size: 0.95rem;
        }

            .pro-accordion-body strong {
                color: #ffffff !important;
            }


        .pro-ticket-card {
            background-color: #1e293b;
            border: 1px solid #334155;
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .ticket-icon {
            background-color: #3b82f6;
            color: #ffffff;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
        }

        .pro-label {
            color: #94a3b8;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            display: block;
        }

        .pro-input {
            background-color: #0f172a !important;
            border: 1px solid #334155 !important;
            color: #ffffff !important;
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 0.95rem;
        }

            .pro-input:focus {
                border-color: #3b82f6 !important;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2) !important;
                outline: none;
            }

        .pro-btn-primary {
            background-color: #3b82f6;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            padding: 14px;
            font-weight: 600;
            font-size: 1rem;
            transition: background-color 0.2s;
        }

            .pro-btn-primary:hover {
                background-color: #2563eb;
            }

        .pro-border {
            border-color: #334155 !important;
        }

        .pro-link {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.05rem;
        }

            .pro-link:hover {
                color: #60a5fa;
                text-decoration: underline;
            }
    </style>
}

@section Scripts {
    <script>
        document.getElementById('faqSearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let items = document.querySelectorAll('.pro-accordion-item');
            items.forEach(item => {
                let text = item.innerText.toLowerCase();
                item.style.display = text.includes(filter) ? "block" : "none";
            });
        });
    </script>
}