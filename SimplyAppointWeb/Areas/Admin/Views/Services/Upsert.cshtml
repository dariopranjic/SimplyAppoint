@{
    ViewData["Title"] = "Create Service";
    Layout = "_AdminLayout";
}

<div class="row mb-2 mb-xl-3 align-items-center">
    <div class="col-auto d-none d-sm-block">
        <h3 class="mb-0"><strong>Create Service</strong></h3>
        <div class="text-muted">Add a new service with duration and price</div>
    </div>

    <div class="col-auto ms-auto text-end mt-n1">
        <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-light bg-white me-2">
            <i class="align-middle me-1" data-feather="arrow-left"></i> Back to Services
        </a>
        <button type="submit" form="serviceCreateForm" class="btn btn-primary">
            <i class="align-middle me-1" data-feather="check"></i> Create Service
        </button>
    </div>
</div>

<div class="row">
    <!-- Form -->
    <div class="col-12 col-lg-8 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">Service Details</h5>
            </div>

            <div class="card-body">
                <form asp-area="Admin" asp-controller="Services" asp-action="Create" method="post" novalidate id="serviceCreateForm">

                    <!-- Basics -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Basics</h6>

                        <div class="mb-3">
                            <label class="form-label">Service name</label>
                            <input name="Name" type="text" class="form-control" placeholder="e.g. Haircut" required />
                            <div class="form-text">Shown to customers when booking.</div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Category</label>
                                <select name="Category" class="form-select">
                                    <option value="" selected>Select category</option>
                                    <option>Hair</option>
                                    <option>Beard</option>
                                    <option>Beauty</option>
                                    <option>Pets</option>
                                    <option>Other</option>
                                </select>
                                <div class="form-text">Optional but helps organize your list.</div>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Status</label>
                                <select name="IsActive" class="form-select">
                                    <option value="true" selected>Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                                <div class="form-text">Inactive services won’t appear in booking.</div>
                            </div>
                        </div>

                        <div class="mb-0">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="3" placeholder="Short description (optional)"></textarea>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Pricing & Duration -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Pricing & Duration</h6>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Duration (minutes)</label>
                                <select name="DurationMinutes" class="form-select" required>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="45" selected>45</option>
                                    <option value="60">60</option>
                                    <option value="75">75</option>
                                    <option value="90">90</option>
                                    <option value="120">120</option>
                                </select>
                                <div class="form-text">Used to block time in your calendar.</div>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Price (€)</label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input name="Price" type="number" step="0.01" min="0" class="form-control" placeholder="e.g. 25" required />
                                </div>
                                <div class="form-text">Set to 0 if free.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Buffer before (minutes)</label>
                                <select name="BufferBeforeMinutes" class="form-select">
                                    <option value="0" selected>0</option>
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                </select>
                                <div class="form-text">Optional setup time before appointment.</div>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Buffer after (minutes)</label>
                                <select name="BufferAfterMinutes" class="form-select">
                                    <option value="0" selected>0</option>
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                </select>
                                <div class="form-text">Optional cleanup time after appointment.</div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Booking Rules -->
                    <div class="mb-0">
                        <h6 class="text-muted mb-3">Booking Rules</h6>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Minimum notice</label>
                                <select name="MinNoticeHours" class="form-select">
                                    <option value="0" selected>No minimum</option>
                                    <option value="1">1 hour</option>
                                    <option value="2">2 hours</option>
                                    <option value="6">6 hours</option>
                                    <option value="12">12 hours</option>
                                    <option value="24">24 hours</option>
                                </select>
                                <div class="form-text">How early customers must book.</div>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">Color</label>
                                <select name="Color" class="form-select">
                                    <option value="primary" selected>Blue</option>
                                    <option value="success">Green</option>
                                    <option value="warning">Orange</option>
                                    <option value="danger">Red</option>
                                    <option value="info">Teal</option>
                                    <option value="secondary">Gray</option>
                                </select>
                                <div class="form-text">Used in calendar for quick recognition.</div>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" name="AllowOnlineBooking" checked>
                            <label class="form-check-label">Allow online booking</label>
                        </div>
                        <div class="form-text">Turn off if this service is only booked manually.</div>
                    </div>

                </form>
            </div>

            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-light bg-white">
                    Cancel
                </a>
                <button type="submit" form="serviceCreateForm" class="btn btn-primary">
                    <i class="align-middle me-1" data-feather="check"></i> Create Service
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4 d-flex">
        <div class="d-flex flex-column w-100">

            <!-- Preview (static until backend) -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Preview</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="d-flex gap-2 align-items-center">
                            <span class="badge bg-primary">Category</span>
                            <span class="badge badge-success-light">Active</span>
                        </div>
                        <i class="align-middle text-muted" data-feather="eye"></i>
                    </div>

                    <h4 class="mt-3 mb-1">New service</h4>
                    <div class="text-muted">Short description will appear here.</div>

                    <hr class="my-3" />

                    <div class="row">
                        <div class="col-6">
                            <div class="text-muted small">Duration</div>
                            <div class="fw-semibold">45 min</div>
                        </div>
                        <div class="col-6 text-end">
                            <div class="text-muted small">Price</div>
                            <div class="fw-semibold">€ 0</div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="text-muted small mb-1">Total block (incl. buffers)</div>
                        <div class="fw-semibold">45 min</div>
                    </div>

                    <div class="mt-3 d-grid">
                        <button type="button" class="btn btn-light bg-white" disabled>
                            <i class="align-middle me-2" data-feather="calendar"></i> Example booking button
                        </button>
                    </div>
                </div>
            </div>

            <!-- Service checklist (static until backend) -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Service Checklist</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <i class="align-middle text-muted" data-feather="type"></i>
                                <span>Name set</span>
                            </div>
                            <span class="badge badge-warning-light">Check</span>
                        </div>

                        <div class="list-group-item d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <i class="align-middle text-muted" data-feather="clock"></i>
                                <span>Duration</span>
                            </div>
                            <span class="badge badge-success-light">OK</span>
                        </div>

                        <div class="list-group-item d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <i class="align-middle text-muted" data-feather="credit-card"></i>
                                <span>Price</span>
                            </div>
                            <span class="badge badge-warning-light">Check</span>
                        </div>

                        <div class="list-group-item d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <i class="align-middle text-muted" data-feather="globe"></i>
                                <span>Online booking</span>
                            </div>
                            <span class="badge badge-success-light">On</span>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <div class="text-muted fw-semibold mb-2">Potential conflicts</div>
                    <div class="text-muted small">
                        No issues detected.
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
