@using SimplyAppoint.Models.ViewModels.Services;
@model ServicesIndexVM
@{
    ViewData["Title"] = "Services";
    Layout = "_AdminLayout";
}

<div class="row mb-2 mb-xl-3 align-items-center">
    <div class="col-auto d-none d-sm-block">
        <h3 class="mb-0"><strong>Services</strong></h3>
    </div>

    <div class="col-auto ms-auto text-end mt-n1">
        <a asp-area="Admin" asp-controller="Services" asp-action="Upsert" class="btn btn-primary me-2">
            <i class="align-middle me-1" data-feather="plus"></i> New Service
        </a>
        <a asp-area="Admin" asp-controller="Calendar" asp-action="Index" class="btn btn-light bg-white">
            <i class="align-middle me-1" data-feather="calendar"></i> Calendar
        </a>
    </div>
</div>

<div class="row">
    <!-- Main -->
    <div class="col-12 col-lg-8 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <div>
                        <h5 class="card-title mb-0">All Services</h5>
                        <div class="text-muted">Click a service to edit</div>
                    </div>

                    <div class="d-flex flex-wrap gap-2">
                        <div class="input-group input-group-navbar">
                            <input type="text" class="form-control" placeholder="Search services…" aria-label="Search services" disabled>
                            <button class="btn" type="button" title="Search (UI only)" disabled>
                                <i class="align-middle" data-feather="search"></i>
                            </button>
                        </div>

                        <select class="form-select" style="max-width: 190px;" disabled>
                            <option selected>All</option>
                            <option>Active</option>
                            <option>Inactive</option>
                        </select>

                        <select class="form-select" style="max-width: 200px;" disabled>
                            <option selected>Sort: Name</option>
                            <option>Sort: Price</option>
                            <option>Sort: Duration</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <!-- Quick actions -->
                <div class="row g-2 mb-3">
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Services" asp-action="Upsert"
                           class="btn btn-primary w-100 d-flex align-items-center justify-content-center py-2">
                            <i class="align-middle me-2" data-feather="plus"></i>
                            <span class="fw-semibold">Add</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Appointments" asp-action="Index"
                           class="btn btn-light bg-white w-100 d-flex align-items-center justify-content-center py-2">
                            <i class="align-middle me-2" data-feather="list"></i>
                            <span class="fw-semibold">Appointments</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Customers" asp-action="Index"
                           class="btn btn-light bg-white w-100 d-flex align-items-center justify-content-center py-2">
                            <i class="align-middle me-2" data-feather="users"></i>
                            <span class="fw-semibold">Customers</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="btn btn-light bg-white w-100 d-flex align-items-center justify-content-center py-2">
                            <i class="align-middle me-2" data-feather="bar-chart-2"></i>
                            <span class="fw-semibold">Dashboard</span>
                        </a>
                    </div>
                </div>

                <!-- Services grid -->
                <div class="row g-3">
                    @if (Model.Services != null && Model.Services.Any())
                    {
                        foreach (var s in Model.Services)
                        {
                            <div class="col-12 col-md-6">
                                <a asp-area="Admin"
                                   asp-controller="Services"
                                   asp-action="Upsert"
                                   asp-route-id="@s.Id"
                                   class="card text-decoration-none mb-0">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start justify-content-between">
                                            <div class="d-flex align-items-center gap-2">
                                                @if (s.Active)
                                                {
                                                    <span class="badge badge-success-light">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger-light">Inactive</span>
                                                }
                                            </div>
                                            <i class="align-middle text-muted" data-feather="chevron-right"></i>
                                        </div>

                                        <h4 class="mt-3 mb-1">@s.Name</h4>

                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <div class="text-muted small">Duration</div>
                                                <div class="fw-semibold">@s.Duration min</div>
                                            </div>
                                            <div class="col-6 text-end">
                                                <div class="text-muted small">Price</div>
                                                <div class="fw-semibold">€ @s.Price.ToString("0.00")</div>
                                            </div>
                                        </div>

                                        @if (s.BufferBefore > 0 || s.BufferAfter > 0)
                                        {
                                            <div class="mt-2 text-muted small">
                                                Buffer: -@s.BufferBefore / +@s.BufferAfter min
                                            </div>
                                        }
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="text-center text-muted py-4">
                                <div class="mb-2">
                                    <i class="align-middle" data-feather="inbox"></i>
                                </div>
                                No services yet. Click <strong>New Service</strong> to create your first one.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-12 col-lg-4 d-flex">
        <div class="d-flex flex-column w-100">

            <!-- Overview -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Overview</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Total services</span>
                        <span class="fw-semibold">@Model.Total</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Active</span>
                        <span class="badge badge-success-light">@Model.ActiveCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Avg duration</span>
                        <span class="fw-semibold">@Model.AvgDuration min</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Avg price</span>
                        <span class="fw-semibold">€ @Model.AvgPrice.ToString("0.00")</span>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-area="Admin" asp-controller="Services" asp-action="Upsert" class="btn btn-primary">
                            <i class="align-middle me-2" data-feather="plus"></i> Create service
                        </a>
                        <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="btn btn-light bg-white">
                            <i class="align-middle me-2" data-feather="settings"></i> Service settings
                        </a>
                    </div>
                </div>
            </div>

            <!-- Service Health -->
            <div class="card flex-fill">
                <div class="card-header">
                    <h5 class="card-title mb-0">Service Health</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Active services</span>
                        <span class="fw-semibold">@Model.ActivePercentage%</span>
                    </div>
                    <div class="progress progress-sm mb-3">
                        <div class="progress-bar bg-success" style="width: @Model.ActivePercentage%"></div>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-6">
                            <div class="border rounded-3 p-2">
                                <div class="text-muted small">Price range</div>
                                <div class="fw-semibold">
                                    € @Model.MinPrice.ToString("0.00") – € @Model.MaxPrice.ToString("0.00")
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded-3 p-2">
                                <div class="text-muted small">Duration range</div>
                                <div class="fw-semibold">@Model.MinDuration – @Model.MaxDuration min</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Most expensive</span>
                        <span class="fw-semibold">
                            @(string.IsNullOrWhiteSpace(Model.MostExpensiveName) ? "—" : $"{Model.MostExpensiveName} (€ {Model.MostExpensivePrice:0.00})")
                        </span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Longest</span>
                        <span class="fw-semibold">
                            @(string.IsNullOrWhiteSpace(Model.LongestName) ? "—" : $"{Model.LongestName} ({Model.LongestDuration} min)")
                        </span>
                    </div>

                    <div class="mt-3 text-muted small">
                        Inactive services: <span class="fw-semibold">@Model.InactiveCount</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        if (window.feather) window.feather.replace();
    </script>
}