@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-badge">SimplyAppoint</div>
            <h1 class="auth-title">Create your account</h1>
            <p class="auth-subtitle">Start managing bookings in minutes.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control auth-input" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control auth-input" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <label asp-for="Input.ConfirmPassword">Confirm password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100 auth-primary">
                Create account
            </button>

            <div class="auth-links">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account?</a>
                <span class="auth-dot">•</span>
                <a asp-page="./ForgotPassword">Forgot password?</a>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="auth-divider">
                    <span>or continue with</span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary auth-provider" name="provider" value="@provider.Name" title="Continue with @provider.DisplayName">
                                Continue with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
