@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-badge">SimplyAppoint</div>
            <h1 class="auth-title">Resend confirmation email</h1>
            <p class="auth-subtitle">
                Enter your email and we’ll send you a new confirmation link.
            </p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 auth-primary">
                Resend email
            </button>

            <div class="auth-links mt-3">
                <a asp-page="./Login">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
