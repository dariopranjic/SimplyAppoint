@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-badge">SimplyAppoint</div>
            <h1 class="auth-title">Reset your password</h1>
            <p class="auth-subtitle">Choose a new password for your account.</p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-12 col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control auth-input" autocomplete="new-password" aria-required="true" placeholder="New password" />
                        <label asp-for="Input.Password">New password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control auth-input" autocomplete="new-password" aria-required="true" placeholder="Repeat password" />
                        <label asp-for="Input.ConfirmPassword">Repeat</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 auth-primary">
                Reset password
            </button>

            <div class="auth-links mt-3">
                <a asp-page="./Login">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
