@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-badge">SimplyAppoint</div>
            <h1 class="auth-title">Welcome back</h1>
            <p class="auth-subtitle">Log in to manage your bookings.</p>
        </div>

        <form id="account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control auth-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control auth-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a asp-page="./ForgotPassword">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 auth-primary">
                Log in
            </button>

            <div class="auth-links">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="auth-divider">
                    <span>or continue with</span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary auth-provider" name="provider" value="@provider.Name" title="Continue with @provider.DisplayName">
                                Continue with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
